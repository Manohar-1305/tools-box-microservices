FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Install LibreOffice and Python
RUN apt-get update && \
    apt-get install -y libreoffice python3 python3-pip && \
    apt-get clean

# Create app directory
WORKDIR /app

# Copy files
COPY . .

# Create folders for uploads and outputs
RUN mkdir -p uploads converted && chmod -R 777 uploads converted

# Install Python dependencies
RUN pip3 install --no-cache-dir -r requirements.txt

# Expose port
EXPOSE 5005

# Start the Flask app
CMD ["python3", "app.py"]


# trivy image word-to-pdf:latest
